<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.WorkoutsActivity"
    android:background="@color/white"
    >

    <Button
        android:id="@+id/button_add_workout_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/gray_background_2"
        android:textColor="@color/black"
        android:text="Add workout for today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarViewWorkouts" />

    <TextView
        android:id="@+id/textViewMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewWeekday1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewWeekday1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="14dp"

        android:textColor="@color/black"
        android:textStyle="bold"

        android:text="Sun"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toStartOf="@+id/calendarViewWorkouts" />

    <TextView
        android:id="@+id/textViewWeekday2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weekdays_margin"

        android:textColor="@color/black"
        android:textStyle="bold"


        android:text="Mon"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toEndOf="@+id/textViewWeekday1" />

    <TextView
        android:id="@+id/textViewWeekday3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weekdays_margin"

        android:textColor="@color/black"
        android:textStyle="bold"


        android:text="Tue"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toEndOf="@+id/textViewWeekday2" />

    <TextView
        android:id="@+id/textViewWeekday4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weekdays_margin"

        android:textColor="@color/black"
        android:textStyle="bold"


        android:text="Wed"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toEndOf="@+id/textViewWeekday3" />

    <TextView
        android:id="@+id/textViewWeekday5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weekdays_margin"

        android:textColor="@color/black"
        android:textStyle="bold"


        android:text="Thu"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toEndOf="@+id/textViewWeekday4" />

    <TextView
        android:id="@+id/textViewWeekday6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weekdays_margin"

        android:textColor="@color/black"
        android:textStyle="bold"


        android:text="Fri"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toEndOf="@+id/textViewWeekday5" />

    <TextView
        android:id="@+id/textViewWeekday7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:textColor="@color/black"
        android:textStyle="bold"


        android:text="Sat"
        app:layout_constraintBottom_toTopOf="@+id/calendarViewWorkouts"

        app:layout_constraintStart_toEndOf="@+id/textViewWeekday6" />






    <sun.bob.mcalendarview.views.ExpCalendarView
        android:id="@+id/calendarViewWorkouts"
        android:layout_width="0dp"
        android:layout_height="300dp"

        android:layout_marginStart="16dp"

        android:layout_marginTop="130dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.home.WorkoutsActivity"

        >

    </sun.bob.mcalendarview.views.ExpCalendarView>



</androidx.constraintlayout.widget.ConstraintLayout>